@model Person
@{ Layout = "_Layout"; ViewBag.Title = "Add a Person";}

<h2>Add a Person <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddPerson" autocomplete="off">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Firstname">Firstname:</label>
        <input asp-for="Firstname" class="form-control" name="Firstname" />
        <span asp-validation-for="Firstname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Lastname">Lastname:</label>
        <input asp-for="Lastname" class="form-control" name="Lastname" />
        <span asp-validation-for="Lastname" class="text-danger"></span>
    </div>
    <div class="text-center panel-body">
        <div class="form-group">
            
            <input type="submit" value="Submit" class="btn btn-primary w-100" />
        </div>
    </div>
</form>

<h3 class="alert">@ViewBag.Result</h3>
